<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="#CC000000">


        <ImageView
            android:id="@+id/ivBtn_back"
            android:layout_width="100pt"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="20pt"
            android:src="@drawable/jz_back_normal" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ivBtn_back"
            android:gravity="center"
            android:paddingLeft="30pt"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            tools:text="@string/app_name" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38pt"
            android:format12Hour="hh:mm"
            android:format24Hour="HH:mm"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="15:42" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_alignParentBottom="true"
        android:background="#CC000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pause"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:padding="20pt"
            android:src="@drawable/jz_pause_normal" />


        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:paddingStart="4dip"
            android:paddingTop="4dip"
            android:paddingEnd="4dip"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            android:layout_width="0dip"
            android:layout_height="10pt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:progressDrawable="@drawable/player_ag_bottom_seek_progress"
            android:thumb="@drawable/jz_bottom_seek_poster" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:paddingStart="4dip"
            android:paddingTop="4dip"
            android:paddingEnd="4dip"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="12:00" />
    </LinearLayout>

</RelativeLayout>