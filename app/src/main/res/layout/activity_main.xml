<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">


            <Button
                android:id="@+id/btn_search"
                android:layout_width="246dp"
                android:layout_height="28dp"
                android:background="@drawable/tv_bug_search_bg"
                android:drawableStart="@drawable/system_serchb"
                android:paddingLeft="10dp"
                android:text="@string/hide_search"
                android:textColor="@color/font_gray_white"
                android:textSize="12sp" />


            <Button
                android:id="@+id/btn_login"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/btn_search"
                android:background="@drawable/tv_bug_search_bg"
                android:drawableStart="@drawable/userinfo"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/login"
                android:textColor="@color/font_gray_white"
                android:textSize="12sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_open_vip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/btn_login"
                android:background="@drawable/tv_open_vip_bg"
                android:drawableStart="@drawable/vip"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/open_vip"
                android:textColor="#ecce9a"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="38dp"
                android:text="@string/app_name"
                android:textColor="@color/tv_f1f1f1"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:layout_toLeftOf="@+id/tv_app_name"
                android:text="15:42"
                android:textColor="@color/tv_f1f1f1"
                android:textSize="18sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:focusable="false"
            android:orientation="horizontal">


            \<ImageView
                android:id="@+id/iv_main_1"
                android:layout_width="283dp"
                android:layout_height="match_parent"
                android:src="@drawable/bitmap3" />


            <LinearLayout
                android:id="@+id/line_desc"
                android:layout_width="295dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_desc_"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="@string/app_brief"
                    android:textColor="@color/tv_ffffff"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_desc"
                    android:textColor="@color/tv_ffffff"
                    android:textSize="11sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="283dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:id="@+id/iv_main_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bitmap4" />


                <TextView
                    android:id="@+id/tv_main_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="5dp"
                    android:text="医生直言：食管癌是“吃”出来的，做好4点！食管癌不敢靠近你"
                    android:textColor="@color/tv_ffffff"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:text="@string/classification"
            android:textColor="@color/tv_ffffff"
            android:textSize="19sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="32dp"
            android:focusable="false"
            android:focusableInTouchMode="false">


            <com.waoqi.tvwidget.view.GridViewTV
                android:id="@+id/gridviewtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:columnWidth="134dp"
                android:gravity="center_vertical"
                android:horizontalSpacing="15dp"
                android:numColumns="auto_fit"
                android:scrollbars="none"
                android:verticalSpacing="15dp" />
        </FrameLayout>


    </LinearLayout>


    <com.waoqi.tvwidget.view.MainUpView
        android:id="@+id/mainUpView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>