<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="378pt"
    android:layout_height="340pt"
    android:clipToPadding="false"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/rl_video_img"
        android:layout_width="342pt"
        android:layout_height="215pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18pt">

        <ImageView
            android:id="@+id/iv_video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/img_default" />

        <TextView
            android:id="@+id/iv_video_is_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_white"
            android:paddingLeft="20pt"
            android:paddingTop="5pt"
            android:paddingRight="20pt"
            android:paddingBottom="5pt"
            android:text="@string/free_str"
            android:textColor="@color/red"
            android:textSize="24sp" />

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_video_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_video_img"
        android:layout_alignLeft="@id/rl_video_img"
        android:layout_alignRight="@id/rl_video_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16pt"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#fff0f0f0"
        android:textSize="28sp"
        tools:text="面肌痉挛的治疗方法有哪些？" />


</RelativeLayout>